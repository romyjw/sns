{
    "datasets":
    {
        "train":
        {
            "name":"ModelDataset",
            "num_points":2048,
            "sample_path":"../data/SNS/IGEA11275/param.pth",
            "num_workers":8,
            "shuffle":true,
            "batch_size":null,
            "pin_memory":false,
            "mask_normals_type":"sphere"
        }
    },
    "models":
    {
        "name": "ResidualMLP",
        "structure": {
            "input_size": 3,
            "output_size": 3,
            "layers": [256,256,256,256,256,256,256,256],
            "act": "Softplus",
            "act_params": {},
            "bias": false,
            "init": "xavier",
            "norm":null,
            "drop":0.0
        }
    },
    "loss":
    {
        "name":"MSELoss",
        "params":
        {
            "reg_normals":1.0e-4
        }
    },
    "optimizers":
    [
        {
            "name":"RMSprop",
            "params":
            {
                "lr":1.0e-4,
                "momentum":0.9
            }
        }
    ],
    "schedulers": [],
    "tasks":
    {
        "name":"surface",
        "train":"SurfaceTrainer",
        "checkpoint":"SurfaceCheckpointer",
        "params":
        {
            "save_patches":false,
            "save_timelapse":false,
            "save_kaolin":false
        }
    },
    "logging":
    {
        "name":"TensorboardLogger",
        "namespace":"IGEA11275",
        "identifier":"XXX-ID-XXX",
        "base_path":"../logs/IGEA11275/"
    },
    "checkpointing":
    {
        "base_path":"../checkpoints/IGEA11275/"
    },
    "rendering":
    {
        "config":"../rendering_configs/giraffe.json"
    },
    "loop":
    {
        "name": "GradientTrainingLoop",
        "num_epochs":20000,
        "grad_stop":1.0e-8,
        "checkpoint_epoch":100
    }
}
